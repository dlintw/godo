#!/usr/bin/env sh

function usage () {
	local name=`basename $0`
	echo "usage: $name <go-source-file>"
}

if ! test -f "$1"; then
	if test -n "$1"; then
		echo "file not found: $1"
	fi
	usage
	exit 1
fi

d="$TMPDIR/$$.$RANDOM"
if ! mkdir $d; then
	echo "could not create temporary directory... sigh"
	exit 1
fi

gofile=$d/tmp.go
if test "#!" = `head -n1 "$1" | cut -c 1-2 `; then
	sed -n '2,$p' $1 > $gofile
else
	cp "$1" $gofile
fi

cat > $d/Makefile <<EOF
include \$(GOROOT)/src/Make.inc
TARG=tmp.out
GOFILES=$gofile
include \$(GOROOT)/src/Make.cmd
EOF

make --directory=$d > /dev/null && $d/tmp.out
rm -rf $d